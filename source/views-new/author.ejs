<!-- Masthead (blueprinty thing)
================================================== -->
<header class="jumbotron masthead" id="overview">
    <div class="inner">
    </div>
</header>


<div class="container">
    <div class="row">
        <div class="span3">
            <div id="author" class="well">
                <div>
                    <h3>About This Site</h3>
                    <p>
                        이 사이트는 <a href="http://github.com/rhiokim/haroog" target="_target">Haroog</a> 엔진으로 구축되어진 사>    이트입니다.
                    </p>
                </div>
            </div>
            <div class="well">
                <ul class="nav nav-list">
                    <li class="nav-header">Author List</li>
                    <li><a href="/authors"><i class="icon-home"></i> Home</a></li>
                    <% for(var id in authors) { %>
                    <li><a href="/authors/<%= id %>"><i class="icon-user"></i> <%= id %></a></li>
                    <% } %>
                    <li class="nav-header">Another list header</li>
                    <li><a href="/category"><i class="icon-book"></i> Category</a></li>
                    <li><a href="#"><i class="icon-cog"></i> Settings</a></li>
                    <li><a href="#"><i class="icon-flag"></i> Help</a></li>
                </ul>
            </div>
        </div>
        <div class="span9">
			<div class="well">
				<div class="page-header">
					<h1>Author : <small>articles</small> <span class="badge badge-info"><%= author.archives.length %></span></h1>
				</div>
				<div class="row">
					<div class="span9">
						<ul>
					<% author.archives.forEach(function(archive) { %>
							<li>
								<h3>
									<a href="/post/<%= archive._file %>"><%= archive.head.title %></a> <small>by <%= archive.author.head.name %> / <%= archive.head.published %></small>
								</h3>
							</li>
					<% }) %>
						</ul>
					</div>
				</div>
			</div>
        </div>
    </div>
</div><!-- /container -->
