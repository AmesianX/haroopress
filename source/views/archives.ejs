<!-- Masthead (blueprinty thing)
================================================== -->
<header class="jumbotron masthead" id="overview">
    <div class="inner">
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="span3">
            <div id="author" class="well">
                <div>
                    <h3>About This Site</h3>
                    <p>
                        이 사이트는 markdown-blog 엔진으로 구축되어진 사이트입니다.
                    </p>
                </div>
            </div>
            <div class="well">
                <ul class="nav nav-list">
                    <li class="nav-header">Categories</li>
                    <li class="active"><a href="/category"><i class="icon-white icon-home"></i> Home</a></li>
                    <li><a href="/category/javascript"><i class="icon-book"></i>JavaScript</a></li>
                    <li><a href="/category/node.js"><i class="icon-pencil"></i>Node</a></li>
                    <li class="nav-header">Another list header</li>
                    <li><a href="#"><i class="icon-user"></i> Authors</a></li>
                    <li><a href="#"><i class="icon-cog"></i> Settings</a></li>
                    <li><a href="#"><i class="icon-flag"></i> Help</a></li>
                </ul>
            </div>
        </div>
        <div class="span9">
            <div class="row">
                <div class="span9">
					<div class="well">
						<div class="page-header">
							<h1>All Archives</h1>
						</div>
						<ul>
					<% posts.forEach(function(article) { %>
						    <li style="margin-bottom: 10px;">
							<h4><a href="/post/<%= article._file%>"><%= article.title %></a> <small><%= article.published %></small></h4>
							</li>
					<% }) %>
						</ul>
					</div>
                </div>
            </div>
        </div>
    </div>
</div><!-- /container -->