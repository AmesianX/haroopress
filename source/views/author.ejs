<!-- Masthead (blueprinty thing)
================================================== -->
<header class="jumbotron masthead" id="overview">
    <div class="inner">
    </div>
</header>


<div class="container">
    <div class="row">
        <div class="span3">
			<%- partial('plugins/intro', config) %>
            <div class="well">
                <ul class="nav nav-list">
					<%- partial('plugins/author-menu', { authors: authors }) %>
					<%- partial('plugins/side-menu', { }) %>
                </ul>
            </div>
        </div>
        <div class="span9">
			<div class="well">
				<div class="page-header">
					<h1>Author : <small>articles</small> <span class="badge badge-info"><%= author.archives.length %></span></h1>
				</div>
				<div class="row">
					<div class="span9">
						<ul>
					<% author.archives.forEach(function(archive) { %>
							<li>
								<h3>
									<a href="/post/<%= archive._file %>"><%= archive.head.title %></a> <small>by <%= archive.author.head.name %> / <%= archive.head.published %></small>
								</h3>
							</li>
					<% }) %>
						</ul>
					</div>
				</div>
			</div>
        </div>
    </div>
</div><!-- /container -->
