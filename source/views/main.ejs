<!-- Masthead (blueprinty thing)
================================================== -->
<header class="jumbotron masthead" id="overview">
    <div class="inner">
    </div>
</header>


<div class="container">
    <div class="row">
        <div class="span3">
			<%- partial('plugins/intro', config) %>
            <div class="well">
                <ul class="nav nav-list">
					<%- partial('plugins/category-menu', { categories: categories }) %>
					<%- partial('plugins/side-menu', { }) %>

                    <li class="nav-header">Another list header</li>
                    <li><a href="/authors"><i class="icon-user"></i> Authors</a></li>
                    <li><a href="#"><i class="icon-cog"></i> Settings</a></li>
                    <li><a href="#"><i class="icon-flag"></i> Help</a></li>
                </ul>
            </div>
        </div>
        <div class="span9">
            <% for(var id in archives) {
				var article = archives[id];
			%>
            <div class="row">
                <div class="span9">
					<div class="well">
						<div class="page-header">
							<h1><a href="/post/<%= article._file %>"><%= article.head.title %></a></h1>
							<span class="pull-right"><%= article.head.published %></span>
						</div>
						<div class="pull-right" style="padding: 0 10px 10px 10px;">
							<ul class="thumbnails">
								<li class="thumbnail">
									<a>
										<img src="<%= article.author._gravatar %>" width="128"/>
									</a>
								</li>
							</ul>
						</div>
						<div class="markdown">
							<%- article.html %>
						</div>
						<p>
							<a href="/post/<%= article._file %>" class="btn btn-primary btn-large">Read more...</a>
						</p>
					</div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div><!-- /container -->
