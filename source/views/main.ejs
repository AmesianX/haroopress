<!-- Masthead (blueprinty thing)
================================================== -->
<header class="jumbotron masthead" id="overview">
    <div class="inner">
    </div>
</header>


<div class="container">
    <div class="row">
        <div class="span3">
            <div id="author" class="well">
                <div>
                    <h3>About This Site</h3>
                    <p>
                        이 사이트는 markdown-blog 엔진으로 구축되어진 사이트입니다.
                    </p>
                </div>
            </div>
            <div class="well">
                <ul class="nav nav-list">
                    <li class="nav-header">Categories</li>
                    <li class="active"><a href="/category"><i class="icon-white icon-home"></i> Home</a></li>
                    <% cates.forEach(function(cate) { %> 
                    <li><a href="/category/<%= cate %>"><i class="icon-book"></i><%= cate %></a></li>
                    <% }) %>
                    <li class="nav-header">Another list header</li>
                    <li><a href="#"><i class="icon-user"></i> Authors</a></li>
                    <li><a href="#"><i class="icon-cog"></i> Settings</a></li>
                    <li><a href="#"><i class="icon-flag"></i> Help</a></li>
                </ul>
            </div>
        </div>
        <div class="span9">
            <% posts.forEach(function(article) { %>
            <div class="row">
                <div class="span9">
					<div class="well">
						<div class="page-header">
							<h1><a href="/post/<%= article._file%>"><%= article.header.title %></a></h1>
							<span class="pull-right"><%= article.header.published %></span>
						</div>
						<div class="pull-right" style="padding: 0 10px 10px 10px;">
							<ul class="thumbnails">
								<li class="thumbnail">
									<a>
										<img src="<%= article.author.gravatar %>" width="128"/>
									</a>
								</li>
							</ul>
						</div>
						<div class="article">
							<%- article.body %>
						</div>
						<p>
							<a href="/post/<%= article._file%>" class="btn btn-primary btn-large">Read more...</a>
						</p>
					</div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div><!-- /container -->
