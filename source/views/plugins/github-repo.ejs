    <% if(display) { %>
        <div class="well _github_repo">
            <div class="pull-right">
                <i class="icon-info-sign"></i>
            </div>
            <h6>github.com repositories</h6>
        </div>
        <script>
            github.showRepos({
                user: '<%= user %>',
                count: <%= repoCount %>,
                skip_forks: <%= skipForks %>,
                target: '._github_repo'
            });
        </script>
    <% } %>